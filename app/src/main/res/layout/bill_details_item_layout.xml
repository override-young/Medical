<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/frame_edge_distance"
        android:paddingRight="@dimen/frame_edge_distance"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/frame_eight_distance"
            android:paddingRight="@dimen/frame_eight_distance"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="名称"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="针"
                android:padding="@dimen/frame_eight_distance"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/frame_eight_distance"
            android:paddingRight="@dimen/frame_eight_distance"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="单位"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_danwei"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="颗"
                android:padding="@dimen/frame_eight_distance"
                />
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/frame_edge_distance"
        android:paddingRight="@dimen/frame_edge_distance"
        >
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/frame_eight_distance"
            android:paddingRight="@dimen/frame_eight_distance"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="规格"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_guige"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="CM"
                android:padding="@dimen/frame_eight_distance"
                />
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:paddingLeft="@dimen/frame_eight_distance"
            android:paddingRight="@dimen/frame_eight_distance"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="领用数量"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/text_normal_grey_color"
                android:textSize="@dimen/frame_text_small_size"
                android:text="8"
                android:padding="@dimen/frame_eight_distance"
                />
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/frame_one_distance"
        android:background="@color/gray_line_color"/>

</android.support.v7.widget.LinearLayoutCompat>