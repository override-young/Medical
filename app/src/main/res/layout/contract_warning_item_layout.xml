<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/frame_eight_distance"
        android:layout_marginBottom="@dimen/frame_eight_distance"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        app:cardElevation="@dimen/frame_four_distance">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/frame_eight_distance">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/frame_eight_distance"
                        android:text="名称"
                        android:textColor="@color/text_normal_grey_color2"
                        android:textSize="@dimen/frame_text_small_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/frame_eight_distance"
                        android:text="xx合同001"
                        android:textColor="@color/text_normal_tint_color"
                        android:textSize="@dimen/frame_text_small_size" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="编号"
                            android:textColor="@color/text_normal_grey_color2"
                            android:textSize="@dimen/frame_text_small_size" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="00645236871"
                            android:textColor="@color/text_normal_tint_color"
                            android:textSize="@dimen/frame_text_small_size" />
                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="到期时间"
                            android:textColor="@color/text_normal_grey_color2"
                            android:textSize="@dimen/frame_text_small_size" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/tv_end_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="@dimen/frame_eight_distance"
                            android:text="2019-12-15"
                            android:textColor="@color/text_normal_tint_color"
                            android:textSize="@dimen/frame_text_small_size" />
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/frame_one_distance"
                    android:layout_marginLeft="@dimen/frame_eight_distance"
                    android:layout_marginRight="@dimen/frame_eight_distance"
                    android:background="@color/gray_line_color" />
                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/frame_two_distance"
                        android:text="效期剩余"
                        android:textStyle="bold"
                        android:textColor="@color/text_normal_tint_color"
                        android:textSize="@dimen/frame_text_small_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_yyzz_remaining_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/frame_two_distance"
                        android:text="10"
                        android:textColor="@color/brown"
                        android:textSize="@dimen/frame_text_normal_size"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/frame_two_distance"
                        android:text="天"
                        android:textStyle="bold"
                        android:textColor="@color/text_normal_tint_color"
                        android:textSize="@dimen/frame_text_small_size" />
                </android.support.v7.widget.LinearLayoutCompat>
            </android.support.v7.widget.LinearLayoutCompat>


        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>