<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/frame_eight_distance"
        android:layout_marginBottom="@dimen/frame_eight_distance"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="@dimen/frame_four_distance"
        app:cardElevation="@dimen/frame_four_distance">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/frame_edge_distance"
                android:paddingRight="@dimen/frame_edge_distance">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/frame_eight_distance"
                    android:paddingRight="@dimen/frame_eight_distance">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账单编号"
                        android:textColor="@color/text_normal_grey_color2"
                        android:textSize="@dimen/frame_text_small_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_bill_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/frame_eight_distance"
                        android:text="201912120955"
                        android:textColor="@color/text_normal_tint_color"
                        android:textSize="@dimen/frame_text_small_size" />
                </android.support.v7.widget.LinearLayoutCompat>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_ks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/frame_four_distance"
                    android:text=""
                    android:textColor="@color/text_normal_grey_color2"
                    android:textSize="@dimen/frame_text_small_size" />
            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/frame_edge_distance"
                android:paddingRight="@dimen/frame_edge_distance">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/frame_eight_distance"
                    android:paddingRight="@dimen/frame_eight_distance">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账单日期"
                        android:textColor="@color/text_normal_grey_color2"
                        android:textSize="@dimen/frame_text_small_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_bill_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="@dimen/frame_eight_distance"
                        android:text="2012-12-12"
                        android:textColor="@color/text_normal_tint_color"
                        android:textSize="@dimen/frame_text_small_size" />
                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_btn_bg_brown"
                    android:padding="@dimen/frame_four_distance"
                    android:textStyle="bold"
                    android:text="待审核"
                    android:textColor="@color/white"
                    android:textSize="@dimen/frame_text_small_size" />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>

</android.support.v7.widget.LinearLayoutCompat>