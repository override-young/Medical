<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/alen_toolbar_layout"/>
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/frame_eight_distance"
        >
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ly_ks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shap_btn_bg_border"
            android:text="科室"
            android:paddingLeft="@dimen/frame_four_distance"
            android:paddingRight="@dimen/frame_four_distance"
            android:paddingTop="@dimen/frame_eight_distance"
            android:paddingBottom="@dimen/frame_eight_distance"
            android:gravity="center"
            android:textColor="@color/light_green"
            android:textSize="@dimen/frame_text_smaller_size"
            android:drawableRight="@drawable/ic_arrow_drop_down_green_24dp"
            android:layout_margin="@dimen/frame_four_distance"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_hospital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shap_btn_bg_border"
            android:text="医院"
            android:paddingLeft="@dimen/frame_four_distance"
            android:paddingRight="@dimen/frame_four_distance"
            android:paddingTop="@dimen/frame_eight_distance"
            android:paddingBottom="@dimen/frame_eight_distance"
            android:gravity="center"
            android:textColor="@color/light_green"
            android:textSize="@dimen/frame_text_smaller_size"
            android:drawableRight="@drawable/ic_arrow_drop_down_green_24dp"
            android:layout_margin="@dimen/frame_four_distance"
            android:visibility="gone"
            />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/ly_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="@dimen/frame_four_distance"
            android:paddingRight="@dimen/frame_four_distance"
            android:paddingTop="@dimen/frame_eight_distance"
            android:paddingBottom="@dimen/frame_eight_distance"
            android:text="19-12-20至19-12-22"
            android:background="@drawable/shap_btn_bg_border"
            android:textColor="@color/light_green"
            android:singleLine="true"
            android:textSize="@dimen/frame_text_smaller_size"
            android:drawableRight="@drawable/ic_arrow_drop_down_green_24dp"
            android:layout_margin="@dimen/frame_four_distance"
            />
    </android.support.v7.widget.LinearLayoutCompat>
    <include layout="@layout/alen_progress_layout"/>
    <allen.frame.widget.MaterialRefreshLayout
        android:id="@+id/mater"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:overlay="false"
        app:progress_backgroud_color="@android:color/white"
        app:refresh_style="normal"
        app:wave_show="true">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginStart="@dimen/frame_edge_distance"
            android:layout_marginEnd="@dimen/frame_edge_distance"
            android:layout_marginTop="@dimen/frame_two_distance"
            android:layout_marginBottom="@dimen/frame_two_distance"
            android:elevation="1dp">
        </android.support.v7.widget.RecyclerView>
    </allen.frame.widget.MaterialRefreshLayout>
</android.support.v7.widget.LinearLayoutCompat>