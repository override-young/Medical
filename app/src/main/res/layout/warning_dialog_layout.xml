<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/frame_245"
    android:layout_height="@dimen/frame_150"
    android:orientation="vertical"
    android:background="@drawable/shape">
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/frame_text_normal_size"
        android:textColor="@color/text_normal_tint_color"
        android:text="温馨提示"
        android:gravity="center"
        android:padding="@dimen/frame_eight_distance"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_warning_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/frame_text_normal_size"
        android:textColor="@color/text_normal_tint_color"
        android:text="确认通过审核?"
        android:gravity="center"
        android:padding="@dimen/frame_eight_distance"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line_color"/>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/frame_ten_distance"
            android:text="取消"
            android:textSize="@dimen/frame_text_normal_size"
            android:textColor="@color/text_normal_grey_color2"
            android:gravity="center"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray_line_color"/>
        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/frame_ten_distance"
            android:text="确定"
            android:textSize="@dimen/frame_text_normal_size"
            android:textColor="@color/light_green2"
            android:gravity="center"
            />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.v7.widget.LinearLayoutCompat>