<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/frame_eight_distance"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/frame_eight_distance"
        app:cardElevation="@dimen/frame_two_distance"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/item_layout">
        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="@dimen/frame_32_distance"
            android:layout_marginBottom="@dimen/frame_32_distance">
            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/item_icon_panel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/frame_eight_distance">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/item_icon"
                    android:layout_width="@dimen/frame_photo_icon_size"
                    android:layout_height="@dimen/frame_photo_icon_size"
                    android:scaleType="fitCenter"/>
            </android.support.v7.widget.LinearLayoutCompat>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/frame_eight_distance"
                android:textColor="@color/text_gray_color"
                android:textSize="@dimen/frame_text_normal_size"
                android:singleLine="true"
                app:autoSizeMinTextSize="@dimen/frame_photo_small_icon_size"
                app:autoSizeMaxTextSize="@dimen/frame_text_normal_size"/>
        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>