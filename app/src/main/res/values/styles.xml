<resources>
    <style name="bottomActiveTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/frame_text_small_size</item>
        <item name="itemIconSize">@dimen/frame_edge_distance</item>
    </style>
    <style name="bottomInActiveTextStyle" parent="Widget.Design.BottomNavigationView">
        <item name="android:textSize">@dimen/frame_text_smaller_size</item>
        <item name="itemIconSize">@dimen/frame_edge_distance</item>
    </style>
    <style name="Medical.Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/frame_text_middle_size</item>
    </style>
    <style name="Medical.Toolbar.BigTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/frame_32_distance</item>
    </style>
    <style name="AnimUp" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <style name="Theme.Picker" parent="AppTheme">
        <item name="android:editTextStyle">@style/picker_text_style</item>
    </style>
    <style name="picker_text_style" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/frame_text_normal_size</item>
        <item name="android:textColor">@color/light_green2</item>
    </style>
</resources>
